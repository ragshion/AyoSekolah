<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" >

    <LinearLayout
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/feed_nama_png"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Abdur Rozaq"
            android:textColor="@color/colorAccent"
            />

        <View style="@style/Divider"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp">

            <ImageView
                android:id="@+id/iv_ats_foto"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:src="@drawable/ic_photo"
                />

        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Anak Tidak Sekolah"
            android:textColor="@color/md_black_1000"
            />

        <View style="@style/Divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NIK"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_ats_nik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3326"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Lengkap"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_ats_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Lengkap"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenis Kelamin"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_ats_jk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Laki-laki"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal Lahir"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_ats_tgl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="01 Agustus 1996" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Usia"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_ats_usia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Usia" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kategori"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_ats_kategori"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kategori"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alasan"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_ats_alasan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alasan Tidak Sekolah" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_ats_alamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alamat" />

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>


