<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="8dp"

                android:id="@+id/iv_foto"
                android:layout_width="122dp"
                android:layout_height="96dp"
                android:src="@drawable/ic_photo"/>

            <LinearLayout
                android:id="@+id/linear_lho"
                android:layout_toRightOf="@+id/iv_foto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp">

                <TextView
                    android:id="@+id/tv_nik"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3326120108960003"
                    android:textColor="@color/accent"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/tv_nama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Abdur Rozaq"
                    android:textColor="@color/colorAccent3"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="2dp"/>

                <TextView
                    android:id="@+id/tv_alamat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Desa, Rowokembu Mudinan RT 06 RW 03 Kec. Wonopringgo, Kab. Pekalongan"
                    android:textColor="@color/md_light_primary_text"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/tv_kategori"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Drop Out"
                    android:textColor="@color/md_light_primary_text"
                    android:textSize="11sp"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/tv_alasan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sudah Kaya, Malas Sekolah"
                    android:textColor="@color/md_light_primary_text"
                    android:textSize="11sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp"/>

            </LinearLayout>

        </LinearLayout>

        <View android:layout_above="@+id/tv_verifikasi" android:id="@+id/divider_lho" style="@style/Divider"/>

        <TextView
            android:id="@+id/tv_verifikasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SEDANG DI PROSES"
            android:textColor="@color/md_teal_500"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"/>

    </LinearLayout>

</android.support.v7.widget.CardView>

